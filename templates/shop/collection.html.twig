{% extends 'base.html.twig' %}

{% block title %}Collection - OPALE PARIS{% endblock %}

{% block body %}
    <div class="shop-page-container">

        <div class="shop-header">
            <h1>Collection</h1>
            <p class="subtitle">Découvrez nos dernières pièces fraîchement sélectionnées : des articles exclusifs, raffinés et inspirés des tendances actuelles du luxe.</p>
        </div>

        <div class="product-grid">
            {% for product in products %}
                <div class="product-card">

                    <div class="product-image-wrapper">
                        {# MODIFICATION ICI : 'img/' au lieu de 'images/' #}
                        <img src="{{ asset('img/' ~ product.image) }}" alt="{{ product.title }}" loading="lazy">

                        <button class="wishlist-btn">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path></svg>
                        </button>
                    </div>

                    <div class="product-info">
                        <h3>{{ product.title }}</h3>
                        <div class="price-row">
                            <span class="price">{{ product.price }}</span>
                            {# BOUTON AJOUTER AU PANIER #}
                            <button class="btn-add-cart"
                                    data-url="{{ path('cart_add', {id: product.id}) }}"
                                    data-id="{{ product.id }}"
                                    aria-label="Ajouter au panier">

                                {# L'icône Sac de shopping (SVG) #}
                                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                                    <line x1="3" y1="6" x2="21" y2="6"></line>
                                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div class="load-more-container">
            <button class="btn-load-more">Charger plus de produits</button>
        </div>

    </div>
{% endblock %}
